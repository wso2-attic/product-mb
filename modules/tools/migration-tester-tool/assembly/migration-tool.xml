<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
    http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
      http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <formats>
        <format>zip</format>
    </formats>
    <id>pack</id>
    <fileSets>
        <fileSet>
            <directory>src/main/resources/</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>client-truststore.jks</include>
                <include>jndi.properties</include>
                <include>test-plan.xml</include>
                <include>log4j.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>qpidversion.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/logs</directory>
            <outputDirectory>logs</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/${artifactId}_${version}</source>
            <outputDirectory>/</outputDirectory>
            <destName>${artifactId}_${version}</destName>
        </file>
    </files>

    <!-- package dependencies -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>
